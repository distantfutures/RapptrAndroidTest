<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- Main Screen Buttons Structure -->
    <style name="ButtonsOverlay" parent="Widget.AppCompat.Button">
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="android:background">@drawable/ic_main_buttons</item>
    </style>
    <!-- Main Screen Buttons Attributes -->
    <style name="ButtonsOverlay.IconText" parent="ButtonsOverlay">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/chat_text</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <!-- Box Style Buttons Structure -->
    <style name="BoxButtonOverlay" parent="Widget.AppCompat.Button">
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="android:background">@drawable/ic_login_button</item>
    </style>
    <!-- Box Style Buttons Attributes -->
    <style name="BoxButtonOverlay.Text" parent="BoxButtonOverlay">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <!-- Input Text Style -->
    <style name="LoginInput" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/ic_cursor_color</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/login_input_text</item>
        <item name="android:textColorHint">@color/login_hint_text</item>
    </style>
    <!-- ImageView Shape Appearance  -->
    <style name="ShapeAppearance.Image.Circular" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Splash Screen -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:windowBackground">@drawable/gpc_splash</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
</resources>
